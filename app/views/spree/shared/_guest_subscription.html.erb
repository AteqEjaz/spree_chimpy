<% @subscriber ||= Spree::Chimpy::Subscriber.new %>
<%= form_for @subscriber do |f| %>
  <div>
    <h2><%= Spree.t('chimpy.subscribe_title') %></h2>
    <%= f.label :email, Spree.t('chimpy.email.label') %>
    <%= f.email_field :email, placeholder: Spree.t('chimpy.email.placeholder') %>
    <%= f.submit %>
  </div>
<% end %>
